<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to 'Show', album %></td>
        <td><% if current_user && current_user.editor? %> 
  <p class="recipe-edit"> 
    <%= link_to 'Edit', edit_album_path(album) %> |

  </p> 
<% end %></td>
        <td>  <% if current_user && current_user.admin? %> 
  <p class="recipe-delete">

    <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %><p> 
<% end %></td>



      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user && current_user.editor? %>
<%= link_to 'New Album', new_album_path %>
<% end %>